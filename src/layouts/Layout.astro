---
const { title } = Astro.props;

interface Props {
	title: string;
}
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<meta name="apple-mobile-web-app-title" content="Lingkod Ng Dambana | Liliw, Laguna" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="generator" content={Astro.generator} />
		<title>{title || "Lingkod Ng Dambana | Liliw, Laguna"}</title>
	</head>
	<body class="h-full m-0 font-sans antialiased bg-gradient-to-br from-slate-50 to-white text-slate-900">
		<slot />
	</body>
</html>
