---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import emblemLogo from '../assets/lndliliw-emblem-primary-shadow.png';
---

<Layout title="About Us | Lingkod Ng Dambana">
    <main class="fade-in">
        <!-- Hero Section -->
        <section class="relative min-h-[70vh] flex items-center justify-center bg-[#205488]">
            <div class="absolute inset-0">
                <div class="absolute inset-0 pattern-grid opacity-5"></div>
                <div class="absolute inset-0 logo-pattern opacity-[0.09] bg-repeat"></div>
                <div class="absolute inset-0 bg-gradient-to-b from-[#205488]/50 via-[#205488]/30 to-[#205488]"></div>
            </div>
            
            <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-20">
                <div class="text-center max-w-4xl mx-auto">
                    <span class="inline-block text-yellow-400 text-lg md:text-xl font-medium mb-4 animate-fade-in tracking-wide">
                        Our Story
                    </span>
                    <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-8 animate-fade-in leading-tight">
                        About <span class="text-yellow-400">Us</span>
                    </h1>
                    <p class="text-white text-lg md:text-xl max-w-2xl mx-auto animate-fade-in-up leading-relaxed">
                        Discover our journey of faith, service, and dedication to the Church.
                    </p>
                </div>
            </div>
        </section>

        <!-- Mission and Vision Section -->
        <section class="py-20 bg-white">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="max-w-4xl mx-auto">
                    <div class="grid md:grid-cols-2 gap-12">
                        <!-- Mission -->
                        <div class="space-y-6">
                            <h2 class="text-3xl font-bold text-[#205488]">Our Mission</h2>
                            <p class="text-slate-600 leading-relaxed">
                                To serve God and the Church with dedication and inspire others to deepen their faith through liturgical service.
                            </p>
                        </div>
                        <!-- Vision -->
                        <div class="space-y-6">
                            <h2 class="text-3xl font-bold text-[#205488]">Our Vision</h2>
                            <p class="text-slate-600 leading-relaxed">
                                To nurture a generation of devoted and faith-filled individuals who contribute to the spiritual life of their community.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Emblem Section -->
        <section class="py-20 bg-gray-50">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="max-w-4xl mx-auto">
                    <h2 class="text-4xl font-bold text-[#205488] mb-12 text-center">Our Emblem</h2>
                    
                    <!-- Emblem Image -->
                    <div class="relative group mb-12">
                        <div class="absolute inset-0 bg-gradient-to-r from-[#205488]/10 to-[#FDC83D]/10 rounded-3xl blur-2xl transition-all duration-300 group-hover:blur-3xl"></div>
                        <div class="relative max-w-lg mx-auto">
                            <Image 
                                src={emblemLogo} 
                                alt="LND Emblem" 
                                class="w-full mx-auto drop-shadow-2xl transition-all duration-500 hover:scale-105"
                                width={512}
                                height={512}
                            />
                        </div>
                    </div>

                    <!-- Emblem Description -->
                    <div class="space-y-8">
                        <div class="bg-white p-8 rounded-2xl shadow-sm">
                            <h3 class="text-2xl font-bold text-[#205488] mb-4 text-center">Coat of Arms of Lingkod Ng Dambana</h3>
                            <p class="text-slate-600 leading-relaxed mb-8 text-center">
                                The coat of arms represents the mission, devotion, and heritage of the Lingkod Ng Dambana of St. John the Baptist Parish, Liliw, Laguna. Each element has been carefully chosen to reflect the ministry's patron saints, devotions, and values.
                            </p>

                            <!-- The Shield Description -->
                            <div class="mb-8">
                                <h4 class="text-xl font-semibold text-[#205488] mb-4 flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.618 5.984A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                    </svg>
                                    The Shield
                                </h4>
                                <p class="text-slate-600 mb-4 text-center">The shield is quartered, signifying the unity and diversity of the ministry's purpose and mission.</p>
                            </div>

                            <!-- Quadrants Description -->
                            <div class="space-y-8">
                                <!-- Top Left Quadrant -->
                                <div class="bg-slate-50 p-6 rounded-xl">
                                    <h5 class="text-lg font-semibold text-[#205488] mb-3 text-center">St. John the Baptist Parish and Mount Banahaw</h5>
                                    <p class="text-slate-600 text-center">The image of the parish church, set against the backdrop of Mount Banahaw, represents the sacredness of the parish and its geographical identity in Liliw, Laguna. This quadrant ties the ministry to its parish community and the natural beauty of its surroundings.</p>
                                </div>

                                <!-- Top Right Quadrant -->
                                <div class="bg-slate-50 p-6 rounded-xl">
                                    <h5 class="text-lg font-semibold text-[#205488] mb-3 text-center">The Eucharist and Candles</h5>
                                    <p class="text-slate-600 text-center">The Eucharist, radiating with light, symbolizes the core of Catholic faith â€“ the Body and Blood of Christ. The two candles flanking the Eucharist represent the ministry's commitment to serving as light-bearers. This quadrant emphasizes the ministry's focus on the Eucharistic celebration and devotion to Christ's presence.</p>
                                </div>

                                <!-- Bottom Left Quadrant -->
                                <div class="bg-slate-50 p-6 rounded-xl">
                                    <h5 class="text-lg font-semibold text-[#205488] mb-3 text-center">St. Tarcisius and the Palm Branch</h5>
                                    <p class="text-slate-600 text-center">The palm branch, accompanied by a radiant Chi-Rho (the monogram for Christ), represents St. Tarcisius, the patron saint of altar servers. St. Tarcisius is honored for his unwavering devotion to the Eucharist, even unto death.</p>
                                </div>

                                <!-- Bottom Right Quadrant -->
                                <div class="bg-slate-50 p-6 rounded-xl">
                                    <h5 class="text-lg font-semibold text-[#205488] mb-3 text-center">Marian Devotion to Our Lady of Fatima</h5>
                                    <p class="text-slate-600 text-center">The letter "M" crowned with twelve stars signifies the ministry's devotion to the Blessed Virgin Mary, particularly under the title of Our Lady of Fatima. This quadrant reflects the ministry's deep connection to the Mother of God and its commitment to spreading her message of peace and prayer.</p>
                                </div>
                            </div>

                            <!-- The Scroll and Motto -->
                            <div class="bg-slate-50 p-6 rounded-xl mt-8">
                                <h4 class="text-xl font-semibold text-[#205488] mb-4 flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                    The Scroll and Motto
                                </h4>
                                <div class="space-y-4 text-center">
                                    <div>
                                        <h6 class="font-medium text-[#205488] mb-1">Position</h6>
                                        <p class="text-slate-600">Above the shield, a scroll in white and red bears the name of the ministry: Lingkod Ng Dambana, St. John the Baptist Parish, Liliw, Laguna.</p>
                                    </div>
                                    <div>
                                        <h6 class="font-medium text-[#205488] mb-1">Motto</h6>
                                        <p class="text-slate-600">The scroll below the shield contains the ministry's guiding principle, <span class="italic">"Fidelitas Deo"</span> (Faithfulness to God), encapsulating its commitment to unwavering service and devotion.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- History Section -->
        <section class="py-20 bg-white">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="max-w-4xl mx-auto">
                    <h2 class="text-4xl font-bold text-[#205488] mb-12 text-center">Our History</h2>
                    <div class="space-y-8">
                        <p class="text-slate-600 leading-relaxed">
                            Founded in [Year], LND has grown from a small group of altar servers into a thriving community committed to liturgical service and personal growth.
                        </p>
                        <!-- Timeline will be added here -->
                        <div class="grid gap-8 mt-12">
                            <!-- Timeline items will be added here -->
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Core Values Section -->
        <section class="py-20 bg-gray-50">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="max-w-4xl mx-auto">
                    <h2 class="text-4xl font-bold text-[#205488] mb-12 text-center">Core Values</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                        <!-- Faith -->
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <div class="text-[#205488] mb-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                </svg>
                            </div>
                            <h3 class="text-xl font-bold text-[#205488] mb-2">Faith</h3>
                            <p class="text-slate-600">Deepening our relationship with God through service and prayer.</p>
                        </div>

                        <!-- Service -->
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <div class="text-[#205488] mb-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                                </svg>
                            </div>
                            <h3 class="text-xl font-bold text-[#205488] mb-2">Service</h3>
                            <p class="text-slate-600">Dedicated service to God, the Church, and our community.</p>
                        </div>

                        <!-- Commitment -->
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <div class="text-[#205488] mb-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <h3 class="text-xl font-bold text-[#205488] mb-2">Commitment</h3>
                            <p class="text-slate-600">Unwavering dedication to our responsibilities and growth.</p>
                        </div>

                        <!-- Brotherhood -->
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <div class="text-[#205488] mb-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                </svg>
                            </div>
                            <h3 class="text-xl font-bold text-[#205488] mb-2">Brotherhood</h3>
                            <p class="text-slate-600">Supporting and uplifting each other in faith and service.</p>
                        </div>

                        <!-- Excellence -->
                        <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                            <div class="text-[#205488] mb-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                                </svg>
                            </div>
                            <h3 class="text-xl font-bold text-[#205488] mb-2">Excellence</h3>
                            <p class="text-slate-600">Striving for excellence in liturgical service and personal conduct.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Leadership Section -->
        <section class="py-20 bg-white">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="max-w-6xl mx-auto">
                    <h2 class="text-4xl font-bold text-[#205488] mb-12 text-center">Our Leadership</h2>
                    
                    <!-- Organizational Chart -->
                    <div class="org-chart">
                        <!-- Spiritual Director -->
                        <div class="level-1">
                            <div class="org-box bg-[#205488] text-white p-6 rounded-xl shadow-lg mx-auto max-w-md">
                                <div class="flex items-center gap-4">
                                    <div class="w-20 h-20 rounded-full bg-white/10 flex items-center justify-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h3 class="text-2xl font-bold">Rev. Fr. Noel C. Nuguit</h3>
                                        <p class="text-white/80">Spiritual Director</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Executive Officers -->
                        <div class="level-2 mt-20">
                            <div class="grid grid-cols-2 gap-8 max-w-4xl mx-auto">
                                <!-- President -->
                                <div class="org-box bg-white p-6 rounded-xl shadow-md border-t-4 border-[#205488]">
                                    <div class="flex items-center gap-4">
                                        <div class="w-16 h-16 rounded-full bg-[#205488]/10 flex items-center justify-center text-[#205488]">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                        </div>
                                        <div>
                                            <h4 class="text-xl font-bold text-[#205488]">Francis Neil M. Mistica</h4>
                                            <p class="text-slate-600">President</p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Vice President -->
                                <div class="org-box bg-white p-6 rounded-xl shadow-md border-t-4 border-[#205488]">
                                    <div class="flex items-center gap-4">
                                        <div class="w-16 h-16 rounded-full bg-[#205488]/10 flex items-center justify-center text-[#205488]">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                        </div>
                                        <div>
                                            <h4 class="text-xl font-bold text-[#205488]">Sherwin S. Borgonia</h4>
                                            <p class="text-slate-600">Vice President</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Other Officers -->
                        <div class="level-3 mt-20">
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
                                <!-- Secretary -->
                                <div class="org-box bg-white p-6 rounded-xl shadow-md border-t-4 border-[#205488]">
                                    <div class="flex flex-col items-center text-center">
                                        <div class="w-16 h-16 rounded-full bg-[#205488]/10 flex items-center justify-center text-[#205488] mb-4">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                        </div>
                                        <div>
                                            <h4 class="text-lg font-bold text-[#205488]">Arvin P. Viri&ntilde;a</h4>
                                            <p class="text-slate-600">Secretary</p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Assistant Secretary -->
                                <div class="org-box bg-white p-6 rounded-xl shadow-md border-t-4 border-[#205488]">
                                    <div class="flex flex-col items-center text-center">
                                        <div class="w-16 h-16 rounded-full bg-[#205488]/10 flex items-center justify-center text-[#205488] mb-4">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                        </div>
                                        <div>
                                            <h4 class="text-lg font-bold text-[#205488]">Josh Mirovien Colona</h4>
                                            <p class="text-slate-600">Assistant Secretary</p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Treasurer -->
                                <div class="org-box bg-white p-6 rounded-xl shadow-md border-t-4 border-[#205488]">
                                    <div class="flex flex-col items-center text-center">
                                        <div class="w-16 h-16 rounded-full bg-[#205488]/10 flex items-center justify-center text-[#205488] mb-4">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                        </div>
                                        <div>
                                            <h4 class="text-lg font-bold text-[#205488]">Edcel Cairo M. Regondola</h4>
                                            <p class="text-slate-600">Treasurer</p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Auditor -->
                                <div class="org-box bg-white p-6 rounded-xl shadow-md border-t-4 border-[#205488]">
                                    <div class="flex flex-col items-center text-center">
                                        <div class="w-16 h-16 rounded-full bg-[#205488]/10 flex items-center justify-center text-[#205488] mb-4">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                        </div>
                                        <div>
                                            <h4 class="text-lg font-bold text-[#205488]">Luvin Reign M. Tunay</h4>
                                            <p class="text-slate-600">Auditor</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Ministries and Activities Section -->
        <section class="py-20 bg-gray-50">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="max-w-6xl mx-auto">
                    <h2 class="text-4xl font-bold text-[#205488] mb-4 text-center">Ministries & Groups</h2>
                    <p class="text-slate-600 text-center mb-12 max-w-2xl mx-auto">Our ministry is organized into specialized groups, each contributing their unique talents to serve the Ministry.</p>
                    
                    <div class="grid gap-8">
                        <!-- LND Core Group -->
                        <div class="bg-white rounded-2xl shadow-sm overflow-hidden group hover:shadow-lg transition-all duration-300">
                            <div class="grid md:grid-cols-[300px,1fr] h-full">
                                <!-- Logo/Image Section -->
                                <div class="relative bg-[#205488] p-8 flex items-center justify-center">
                                    <div class="absolute inset-0 pattern-grid opacity-10"></div>
                                    <img 
                                        src="/images/core-group-logo.webp" 
                                        alt="LND Core Group Logo" 
                                        class="w-24 h-24 object-contain relative z-10 transition-transform duration-300 group-hover:scale-110"
                                    />
                                </div>
                                <!-- Content Section -->
                                <div class="p-8">
                                    <div class="mb-6">
                                        <h3 class="text-2xl font-bold text-[#205488] mb-3">LND Core Group</h3>
                                        <p class="text-slate-600 mb-4">
                                            The central leadership team responsible for overseeing all ministry activities and ensuring alignment with our mission and values.
                                        </p>
                                    </div>
                                    <!-- Members Grid -->
                                    <div>
                                        <h4 class="text-lg font-semibold text-[#205488] mb-6">Core Members</h4>
                                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                                            <!-- President -->
                                            <div class="bg-slate-50 rounded-xl p-4 hover:shadow-md transition-all duration-300">
                                                <div class="flex items-center gap-4">
                                                    <div class="w-16 h-16 rounded-full bg-[#205488]/10 flex items-center justify-center text-[#205488]">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                                        </svg>
                                                    </div>
                                                    <div>
                                                        <p class="font-semibold text-[#205488]">Francis Neil M. Mistica</p>
                                                        <p class="text-sm text-slate-600 mt-1">President</p>
                                                    </div>
                                                </div>
                                            </div>

