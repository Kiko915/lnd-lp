                <div class="max-w-4xl mx-auto">
                    <div class="grid md:grid-cols-2 gap-12">
                        <!-- Event Image -->
                        <div class="w-full h-0 pb-[100%] relative bg-gray-100 rounded-xl overflow-hidden">
                            <img 
                                src={event.image} 
