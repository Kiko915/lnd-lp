                                        <div class="flex flex-wrap gap-2">
                                            {event.tags.map(tag => (
                                                <a 
                                                    href={`/events?tag=${encodeURIComponent(tag)}`}
                                                    class="px-3 py-1.5 bg-[#205488]/10 text-[#205488] rounded-full text-sm hover:bg-[#205488]/20 transition-colors"
                                                >
