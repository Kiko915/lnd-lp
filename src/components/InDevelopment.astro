---
import emblemLogo from '../assets/lndliliw-emblem-primary-shadow.png';
---

<div class="min-h-screen flex items-center justify-center bg-transparent">
    <div class="text-center p-8 max-w-2xl mx-auto animate-fade-in">
        <h1 class="text-4xl md:text-5xl font-bold text-slate-800 tracking-tight mb-2">
            Under Development
        </h1>
        
        <div class="my-12">
            <img 
                src={emblemLogo.src} 
                alt="LND Emblem" 
                class="w-[180px] md:w-[240px] mx-auto drop-shadow-xl transition-all duration-300 hover:scale-105 hover:drop-shadow-2xl"
            />
        </div>

        <p class="text-xl md:text-2xl text-slate-700 mb-12 font-medium">
            Lingkod Ng Dambana | Liliw, Laguna
        </p>

        <div class="space-y-3 mb-12">
            <p class="text-slate-600 text-lg md:text-xl">Our website is currently under construction.</p>
            <p class="text-slate-600 text-lg md:text-xl">We're working hard to bring you something amazing.</p>
        </div>

        <div class="relative w-56 h-1.5 mx-auto bg-slate-200 rounded-full overflow-hidden shadow-inner">
            <div class="absolute top-0 left-0 w-1/3 h-full bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full animate-progress"></div>
        </div>
    </div>
</div>

<style>
    @keyframes progress {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(400%); }
    }

    @keyframes fade-in {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .animate-progress {
        animation: progress 2s ease-in-out infinite;
    }

    .animate-fade-in {
        animation: fade-in 1s ease-in;
    }
</style> 