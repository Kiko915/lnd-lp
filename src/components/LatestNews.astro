---
import { Calendar, Image as ImageIcon } from 'lucide-astro';

const news = [
    {
        title: "Altar Servers' Retreat 2024: A Day of Reflection",
        date: "March 15, 2024",
        excerpt: "Over 50 altar servers gathered for a day of spiritual reflection and fellowship, strengthening their commitment to serving the Lord.",
        image: "placeholder",
        category: "Events"
    },
    {
        title: "Highlights from the LND Parish Fiesta Celebration",
        date: "February 28, 2024",
        excerpt: "The Lingkod ng Dambana ministry played a crucial role in the success of this year's parish fiesta celebrations.",
        image: "placeholder",
        category: "Community"
    },
    {
        title: "New Altar Servers Complete Formation Program",
        date: "January 20, 2024",
        excerpt: "Twenty new altar servers have successfully completed their formation program and are ready to serve in our parish.",
        image: "placeholder",
        category: "Formation"
    }
];
---

<div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-[#205488] mb-4">
            Latest LND News
        </h2>
        <div class="w-20 h-1 bg-yellow-400 mx-auto mb-4 rounded-full"></div>
        <p class="text-gray-600 max-w-2xl mx-auto">
            Stay updated with the latest happenings in our ministry and parish community.
        </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {news.map((item) => (
            <article class="bg-white rounded-xl shadow-lg overflow-hidden transform hover:-translate-y-1 transition-all duration-300 group">
                <a href={`/news/${item.title.toLowerCase().replace(/\s+/g, '-')}`} class="block">
                    <div class="relative">
                        {item.image === "placeholder" ? (
                            <div class="w-full h-56 flex items-center justify-center bg-gray-100">
                                <ImageIcon class="w-12 h-12 text-gray-400" />
                            </div>
                        ) : (
                            <img 
                                src={item.image} 
                                alt={item.title}
                                class="w-full h-56 object-cover transform group-hover:scale-105 transition-transform duration-500"
                            />
                        )}
                        <div class="absolute top-4 left-4">
                            <span class="px-3 py-1 bg-yellow-400 text-[#205488] text-sm font-medium rounded-full">
                                {item.category}
                            </span>
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="flex items-center text-gray-500 text-sm mb-3">
                            <Calendar class="w-4 h-4 mr-2" />
                            {item.date}
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-3 line-clamp-2 group-hover:text-[#205488] transition-colors duration-300">
                            {item.title}
                        </h3>
                        <p class="text-gray-600 line-clamp-3">
                            {item.excerpt}
                        </p>
                        <div class="mt-4 flex items-center text-[#205488] font-medium group/link">
                            Read More
                            <span class="ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300">→</span>
                        </div>
                    </div>
                </a>
            </article>
        ))}
    </div>

    <div class="text-center mt-12">
        <a href="/news" class="inline-flex items-center px-6 py-3 rounded-full border-2 border-[#205488] text-[#205488] hover:bg-[#205488] hover:text-white transition-all duration-300 group">
            View All News
            <span class="ml-2 transform group-hover:translate-x-1 transition-transform duration-300">→</span>
        </a>
    </div>
</div>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style> 