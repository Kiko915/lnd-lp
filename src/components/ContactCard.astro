---
import { Mail, MessageCircle, ArrowRight } from 'lucide-astro';
---

<section class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="relative max-w-5xl mx-auto">
            {/* Contact Card */}
            <div class="bg-[#205488] rounded-3xl p-8 md:p-12 overflow-hidden relative">
                {/* Background Pattern */}
                <div class="absolute inset-0">
                    {/* Subtle dot grid for texture */}
                    <div class="absolute inset-0 pattern-grid opacity-5"></div>
                    {/* Logo pattern background */}
                    <div class="absolute inset-0 logo-pattern opacity-[0.04] bg-repeat"></div>
                </div>

                {/* Content Container */}
                <div class="relative flex flex-col md:flex-row items-center justify-between gap-8">
                    {/* Text Content */}
                    <div class="text-center md:text-left max-w-2xl">
                        <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-4">
                            Want to Join Our Ministry?
                        </h2>
                        <p class="text-white/80 text-lg mb-6 max-w-xl">
                            We welcome new members who wish to serve the Lord through altar serving. Get in touch with us to learn more about joining our community.
                        </p>
                        <div class="flex flex-col sm:flex-row items-center gap-4 justify-center md:justify-start">
                            <div class="flex items-center text-yellow-400 gap-2">
                                <Mail class="w-5 h-5" />
                                <span>lnd.liliw@gmail.com</span>
                            </div>
                            <div class="hidden sm:block text-white/40">|</div>
                            <div class="flex items-center text-yellow-400 gap-2">
                                <MessageCircle class="w-5 h-5" />
                                <span>FB: @LNDLiliw</span>
                            </div>
                        </div>
                    </div>

                    {/* Button Container */}
                    <div class="flex-shrink-0">
                        <a href="/join" 
                           class="group inline-flex items-center gap-2 bg-yellow-400 hover:bg-yellow-500 text-[#205488] font-semibold px-8 py-4 rounded-full transition-all duration-300 shadow-lg hover:shadow-xl">
                            Join Us
                            <ArrowRight class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .pattern-grid {
        background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.2) 1px, transparent 0);
        background-size: 24px 24px;
    }

    .logo-pattern {
        background-image: url('../assets/logo-pattern.png');
        background-size: 200px auto;
        transform: rotate(45deg);
    }

    .contact-card {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease-out forwards;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style> 